{
  "$schema": "https://json-schema.org/draft-04/schema#",
  "$id": "https://cdn.jsdelivr.net/gh/Xsaven/jarvis-brain@v0.0.1/schema/brain.json",
  "title": "Jarvis Brain",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the brain",
      "pattern": "^[a-zA-Z0-9-_\\s]+$",
      "default": "Jarvis"
    },
    "includes": {
      "type": ["array"],
      "description": "List of additional configuration files to include",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {}
}
